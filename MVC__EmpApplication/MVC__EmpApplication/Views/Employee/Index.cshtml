@model IEnumerable<MVC__EmpApplication.Models.Employee>
<html>
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        #index {
            padding: 10px 10px;
            margin: 120px 120px;
        }
    </style>
</head>
<body>
    <div id="index">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Employee ID</th>
                        <th>Name</th>
                        <th>Department</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employees in Model)
                    {
                        <tr>
                            <td>@employees.EMPLOYEE_ID</td>
                            <td>@employees.EMPLOYEE_NAME</td>
                            <td>@employees.DEPARTMENT</td>
                            <td>
                                @*@Html.ActionLink("Index", "Index")*@
                                @Html.ActionLink("Create", "Create", new { EMPLOYEE_ID = employees.EMPLOYEE_ID })
                                @Html.ActionLink("Edit", "Edit", new { EMPLOYEE_ID = employees.EMPLOYEE_ID })
                                @Html.ActionLink("Delete", "Delete", new { EMPLOYEE_ID = employees.EMPLOYEE_ID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

